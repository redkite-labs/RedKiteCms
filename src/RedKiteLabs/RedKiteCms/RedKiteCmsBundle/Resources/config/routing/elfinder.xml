<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="_show_files_manager" pattern="/{_locale}/al_showFilesManager">
        <default key="_controller">AlphaLemonCmsBundle:AlCmsElFinder:showFilesManager</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_media_connect" pattern="/{_locale}/al_elFinderMediaConnect">
        <default key="_controller">AlphaLemonCmsBundle:AlCmsElFinder:connectMedia</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_css_connect" pattern="/{_locale}/al_elFinderStylesheetsConnect">
        <default key="_controller">AlphaLemonCmsBundle:AlCmsElFinder:connectStylesheets</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_js_connect" pattern="/{_locale}/al_elFinderJavascriptsConnect">
        <default key="_controller">AlphaLemonCmsBundle:AlCmsElFinder:connectJavascripts</default>
        <default key="_locale">en</default>
    </route>
</routes>
