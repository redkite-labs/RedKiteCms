<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="{{ extension_alias }}.theme_slots" class="%red_kite_labs_theme_engine.template_slots.class%">
            <tag name="bootbusiness_theme.slots" />
        </service>
        
        <service id="{{ extension_alias }}.theme" class="%red_kite_labs_theme_engine.theme.class%">
            <argument type="string">{{ theme_basename }}</argument>
            <argument type="service" id="{{ extension_alias }}.theme_slots" />
            <tag name="red_kite_labs_theme_engine.themes.theme" />
        </service>
    </services>
</container>