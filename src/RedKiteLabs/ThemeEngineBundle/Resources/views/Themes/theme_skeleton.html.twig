{% set domain = "al_themes" %}

<h2>{{ theme_values.theme_title }}</h2>

<table>
{% if theme_values.info is defined %}
<tr><td rowspan="{{theme_values.info|length + 1}}" width="120"><img src="/{{ theme_values.screenshot }}" width="100" height="100" /></td></tr>
{% for key, value in theme_values.info %}
<tr><th>{{ key }}</th><td>{{ value }}</td></tr>
{% endfor %}
{% else %}
  {% if theme_values.theme_error is defined %}
  <tr><td colspan="2">{{ theme_values.theme_error }}</td></tr>
  {% else %}
  <tr><td colspan="2"><b>{{ "Any information available for this theme" | trans([], domain) }}</b></td></tr>
  {% endif %}
{% endif %}

  <tr>
    <td colspan="3">
        {% block theme_commands %}
        <table>
            <tr>
              {% if theme_values.buttons is defined %}
                  {% if theme_values.buttons == 3 %}
                    <td><a href="{{ path('_activate_theme', { 'themeName': theme_values.theme_title }) }}">{{ "Activate" | trans([], domain) }}</a></td>
                    <td><a href="{{ path('_remove_theme', { 'themeName': theme_values.theme_title }) }}">{{ "Remove" | trans([], domain) }}</a></td>
                  {% elseif theme_values.buttons == 2  %}
                    <td colspan="2"><a href="{{ path('_import_theme', { 'themeName': theme_values.theme_title }) }}">{{ "Import" | trans([], domain) }}</a></td>
                  {% endif %}
              {% endif %}
            </tr>
        </table>
        {% endblock %}
    </td>
  </tr>
</table>