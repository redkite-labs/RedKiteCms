<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.extension.render_slot.class">RedKiteLabs\ThemeEngineBundle\Twig\SlotRendererExtension</parameter>
        <parameter key="twig.extension.file.class">RedKiteLabs\ThemeEngineBundle\Twig\FileExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.render_slot" class="%twig.extension.render_slot.class%" public="false">
            <tag name="twig.extension" alias="slotRenderer" />
            <argument type="service" id="service_container" />
        </service>

        <service id="twig.extension.file" class="%twig.extension.file.class%" public="false">
            <tag name="twig.extension" alias="file" />
        </service>
    </services>

</container>
